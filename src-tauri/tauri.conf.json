{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "launcher-tauri",
  "version": "0.1.0",
  "identifier": "com.duelsplus.launcher",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Duels+ Launcher",
        "width": 1000,
        "height": 700,
        "shadow": true,
        "decorations": false,
        "dragDropEnabled": false,
        "maximizable": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb","appimage","nsis","dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
