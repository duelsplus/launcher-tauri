{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Duels+ Launcher",
  "version": "3.3.1",
  "identifier": "com.duelsplus.launcher",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Duels+ Launcher",
        "width": 1000,
        "height": 700,
        "visible": false,
        "shadow": true,
        "decorations": false,
        "dragDropEnabled": false,
        "maximizable": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "publisher": "Duels+",
    "category": "Game",
    "homepage": "https://duelsplus.com",
    "shortDescription": "Lightweight Minecraft proxy for Hypixel Duels",
    "targets": ["deb", "appimage", "nsis", "dmg"],
    "windows": {
      "nsis": {
        "template": "installer.nsi",
        "sidebarImage": "icons/sidebar.bmp",
        "headerImage": "icons/header.bmp"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/duelsplus/launcher-tauri/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUyQTEwRUU0MkI1QUU5ODAKUldTQTZWb3I1QTZoVWd3L05KT0Y4MmRnVmUyWC9JdFd3UjA3UlpzR2twY3hidUwwTlpjRDJhZkUK"
    }
  }
}
